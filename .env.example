# Petting Zootopia Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# AI Backend Configuration
# =============================================================================

# Which AI backend to use: ollama, claude_haiku, or claude_sonnet
AI_BACKEND=ollama

# Ollama settings (if using ollama backend)
OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=llama3.2:3b

# Anthropic API key (required for claude_haiku or claude_sonnet backends)
# ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# Server Configuration
# =============================================================================

# Web server host and port
HOST=0.0.0.0
PORT=8000

# Enable auto-reload for development
RELOAD=false

# Logging level: debug, info, warning, error
LOG_LEVEL=info

# =============================================================================
# Rate Limiting
# =============================================================================

# Rate limit for API endpoints (slowapi format)
RATE_LIMIT=10/minute

# =============================================================================
# HTTP Client Configuration
# =============================================================================

# Timeout for external API requests (seconds)
HTTP_TIMEOUT=10.0

# =============================================================================
# Observability (Optional)
# =============================================================================

# Honeycomb.io API key for distributed tracing
# HONEYCOMB_API_KEY=your-api-key
# HONEYCOMB_DATASET=petting-zootopia
